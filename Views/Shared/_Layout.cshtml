<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="~/css/navigationLeftMenu.css" rel="stylesheet" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="me-4">
                        <button type="button" id="menu-toggle" class="btn btn-primary">
                            <i class="bi bi-list"></i>
                            <span class="sr-only">Main Menu</span>
                        </button>
                    </li>
                    
                    <li>
                        <button class="btn btn-primary">
                            <a class="text-white" asp-area="" asp-controller="Home" asp-action="Index">WMS</a>
                        </button>
                    </li>
                </ul>
            </div>

            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
        <div class="d-flex" id="wrapper">
            <div class="bg-light border-light" id="sidebar-wrapper">
                <div class="sidebar-heading">Welcome!</div>
                <div class="list-group list-group-flush">


                    <button class="btn btn-secondary text-lg-start" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        Home
                    </button>

                    <div class="btn-group dropend navDropdown">

                        <button type="button" class="btn btn-secondary dropdown-toggle text-lg-start" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-truck"></i>
                            Receiving
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="dropdown-item">Incoming List</a></li>
                            <li><a href="#" class="dropdown-item">Damaged Goods List</a></li>
                        </ul>
                    </div>

                    <div class="btn-group dropend navDropdown">
                        <button type="button" class="btn btn-secondary dropdown-toggle text-lg-start" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-truck"></i>
                            Inventory
                        </button>
                        <ul class="dropdown-menu">
                            <a href="#" class="dropdown-item">Inventory List</a>
                            <a href="#" class="dropdown-item">Putaway</a>
                        </ul>
                    </div>

                    <button class="btn btn-secondary text-lg-start" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-bar-chart"></i>
                        Analytics
                    </button>
                    <button class="btn btn-secondary text-lg-start" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-gear"></i>
                        Settings
                    </button>

                </div>


            </div>

            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

        </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");

        });
    </script>

    <script>
        //to show the dropdown
        $(document).ready(function () {
            $('.navDropdown').hover(function () {
                $(this).addClass('show');
                $(this).find('.dropdown-menu').addClass('show');
            }, function () {
                $(this).removeClass('show');
                $(this).find('.dropdown-menu').removeClass('show');
            });
        });

        // to animate the dropdown to the left side
        $(document).ready(function () {
            $('.navDropdown').hover(function () {
                $(this).addClass('show');
                $(this).find('.dropdown-menu').animate({
                    left: "200px"
                }, 200);
            }, function () {
                $(this).removeClass('show');
                $(this).find('.dropdown-menu').animate({
                    left: "0px"
                }, 200);
            });
        });
    </script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
